pipeline {
    agent{
        label 'docker-slave-ssh'
    }
    tools {
        maven 'Maven3'
        jdk 'jdk8'
    }

    parameters
    {
        choice(choices: ['RELEASE-PREPARE', 'RELEASE-PERFORM', 'RELEASE-ROLLBACK'], 
        description: 'Please select release stages (For successful release: RELEASE-PREPARE -> RELEASE:PERFORM), if RELEASE-PREPARE fails -> RELEASE-ROLLBACK', 
        name: 'release')
    }

    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Setting Git Config'){
            steps
            {
                sh 'git config user.email "jervinmandapat@gmail.com"'
                sh 'git config user.name "Jervin Mandapat"'
            }
        }

        stage ('Prepare-Release') {
            when
            {
                expression { params.release == 'RELEASE-PREPARE'}
            }
            steps
            {
                echo 'Preparing release..'

                withMaven(
                    maven: 'Maven3',
                    options: [artifactsPublisher(disabled: true),junitPublisher(disabled: true)],
                mavenLocalRepo: '${M2_HOME}/.repository')
                {
                    sh "mvn -B release:prepare"
                }
            }
            post {
                success {
                    sh 'mkdir -p sample-jenkins-release && cp ./target/checkout/jenkins/target/*.ear ./sample-jenkins-release';
                    archiveArtifacts artifacts: 'sample-jenkins-release/*.*', fingerprint: true
                }
            }
        }

        stage ('Perform-Release'){
            when
            {
                expression { params.release == 'RELEASE-PERFORM'}
            }
            steps
            {
                echo 'Performing release'

                withMaven(
                    maven: 'Maven3',
                    options: [artifactsPublisher(disabled: true),junitPublisher(disabled: true)],
                mavenLocalRepo: '${M2_HOME}/.repository')
                {
                    sh "mvn -B release:perform"
                }
            }
            post {
                success {
                    sh 'mkdir -p sample-jenkins-release && cp ./jenkins/target/*.jar ./sample-jenkins-release';
                    archiveArtifacts artifacts: 'sample-jenkins-release/*.*', fingerprint: true
                }
            }
        }

        stage ('Release-Rollback'){
            when
            {
                expression { params.release == 'RELEASE-ROLLBACK'}
            }
            steps
            {
                echo 'Performing release'

                withMaven(
                    maven: 'Maven3',
                    options: [artifactsPublisher(disabled: true),junitPublisher(disabled: true)],
                mavenLocalRepo: '${M2_HOME}/.repository')
                {
                    sh "mvn -B release:rollback"
                }
            }
            post {
                success {
                    sh 'mkdir -p sample-jenkins-release && cp ./jenkins/target/*.jar ./sample-jenkins-release';
                    archiveArtifacts artifacts: 'sample-jenkins-release/*.*', fingerprint: true
                }
            }
        }
    }
}
