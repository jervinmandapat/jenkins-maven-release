pipeline {
    agent any
    tools {
        maven 'Maven3'
        jdk 'jdk8'
    }

    parameters
    {
        choice(
        choices: 'increase-version\ndont-increase-version',
        description: 'Increase version?',
        name: 'INCREASE_VERSION')
    }

    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Setting Git Config'){
            steps
            {
                sh 'git config user.email "jervinmandapat@gmail.com"'
                sh 'git config user.name "Jervin Mandapat"'
            }
        }

        stage ('Build') {
            steps
            {
                withMaven(
                    maven: 'Maven3',
                    options: [artifactsPublisher(disabled: true),junitPublisher(disabled: true)],
                mavenLocalRepo: '${M2_HOME}/.repository')
                {
                    sh "mvn -B release:prepare release:perform"
                }
            }
            post {
                success {
                    sh 'mkdir -p jenkins-release && cp ./target/checkout/jenkins/target/*.ear ./jenkins-release';
                    archiveArtifacts artifacts: 'jenkins-release/*.*', fingerprint: true
                }
            }
        }
    }
}
