pipeline {
    agent any
    tools {
        maven 'Maven3'
        jdk 'jdk8'
    }

    parameters
    {
        choice(choices: ['increase-version', 'NOT-increase-version'], description: 'Increase version of the build or release?', name: 'INCREASE_VERSION')
    }

    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Setting Git Config'){
            steps
            {
                sh 'git config user.email "jervinmandapat@gmail.com"'
                sh 'git config user.name "Jervin Mandapat"'
            }
        }

        stage ('Build, Release and Increase Version') {
            when
            {
                expression { params.INCREASE_VERSION == 'increase-version'}
            }
            steps
            {
                echo 'Increasing version..'

                withMaven(
                    maven: 'Maven3',
                    options: [artifactsPublisher(disabled: true),junitPublisher(disabled: true)],
                mavenLocalRepo: '${M2_HOME}/.repository')
                {
                    sh "mvn -B release:prepare release:perform"
                }
            }
            post {
                success {
                    sh 'mkdir -p jenkins-release && cp ./target/checkout/jenkins/target/*.ear ./jenkins-release';
                    archiveArtifacts artifacts: 'jenkins-release/*.*', fingerprint: true
                }
            }
        }

        stage ('Build, Release but not Increase Version'){
            when
            {
                expression { params.INCREASE_VERSION == 'NOT-increase-version'}
            }
            steps
            {
                echo 'Not increasing version..'
            }
        }
    }
}
